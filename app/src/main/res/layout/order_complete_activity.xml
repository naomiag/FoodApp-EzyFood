<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerViewIdComplete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.942">

        <TextView
            android:id="@+id/totalViewId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F6DE69"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#404040"
            android:textSize="17dp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/thanksMesId"
        android:layout_width="300dp"
        android:layout_height="70dp"

        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:textColor="#207DFF"
        android:textStyle="bold"
        android:text="Your order is completed \n Thank you."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewIdComplete"
        android:layout_width="342dp"
        android:layout_height="499dp"
        android:layout_marginTop="210dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>